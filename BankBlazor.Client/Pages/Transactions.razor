@page "/transactions"
@using BankBlazor.Client.Models
@inject HttpClient Http

<HeadContent>
    <title>Transactions – BankApp</title>
</HeadContent>

<h3>All Transactions</h3>

@if (transactions == null)
{
    <p><em>Loading transactions…</em></p>
}
else if (!transactions.Any())
{
    <p><em>No transactions found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Operation</th>
                <th>Amount</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tx in transactions)
            {
                <tr>
                    <td>@tx.TransactionDate.ToString("g")</td>
                    <td>@tx.Type</td>
                    <td>@tx.Operation</td>
                    <td>@tx.Amount.ToString("C")</td>
                    <td>@tx.Balance.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private TransactionDto[]? transactions;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Hämta alla transaktioner från din API (se till att du har en GET /api/transactions/all)
            transactions = await Http.GetFromJsonAsync<TransactionDto[]>("api/transactions/all");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading transactions: {ex.Message}");
            transactions = Array.Empty<TransactionDto>();
        }
    }
}
